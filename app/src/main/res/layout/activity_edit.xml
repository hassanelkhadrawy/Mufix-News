<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.Edit"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/mufix_team"
>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/buler_white"
        android:padding="30dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:backgroundTint="@color/buler_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    android:id="@+id/new_profile_circleImageView"
                    android:layout_width="100dp"
                    android:onClick="Select_image_action"
                    android:layout_height="100dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/ic_person_black_24dp"
                    app:civ_border_color="@color/nebity"
                    app:civ_border_width="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.088"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <EditText
                    android:paddingLeft="15dp"
                    android:id="@+id/new_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:hint="enter name"
                    android:textColor="@color/nebity"
                    android:textColorHint="@color/orange"/>
                <EditText
                    android:textColor="@color/nebity"
                    android:textColorHint="@color/orange"
                    android:id="@+id/new_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:paddingLeft="15dp"
                    android:hint="enter password"/>
                <EditText
                    android:textColor="@color/nebity"
                    android:textColorHint="@color/orange"
                    android:paddingLeft="15dp"
                    android:id="@+id/new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:hint="enter email"/>

                <Button
                    android:onClick="Send_Update"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="update"
                    android:textColor="@color/nebity"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

    </ScrollView>

</RelativeLayout>