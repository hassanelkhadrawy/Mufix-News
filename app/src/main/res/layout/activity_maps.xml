<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mufix_team"
    tools:context=".Activites.Maps"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:background="@drawable/bar_background"
        android:gravity="center"
        android:theme="@style/HeaderBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/HeaderBar"
        >
    </android.support.v7.widget.Toolbar>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/presonal_bar_imge_post"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@mipmap/logo2_round"
            app:civ_border_color="@color/loginColor"
            app:civ_border_width="3dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="10dp"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:padding="5dp"
        android:onClick="lOgIn"
        android:text=" Log in"
        android:textColor="@color/nebity"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        android:layout_gravity="center"
        android:textColor="@color/nebity"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/elfr2a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar" />


        <LinearLayout
            android:padding="10dp"
            android:weightSum="4"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <Spinner
        android:layout_weight="3"
        android:id="@+id/sp_map"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="5dp"
        android:autofillHints="الفرقه"
        android:background="@drawable/card_back"
      >

    </Spinner>

